.title
  font-size: .9rem
  margin-bottom: 1rem;
  text-transform: uppercase
  color: darken(rgba($default),10%)
  text-align: left
  border-bottom: 1px dashed lighten($border,18%)
.big
  font-size 3rem
.small
  font-size 0.8rem
.uppercase
  text-transform uppercase
.italic
  font-style italic
.strong
  font-weight bold
.text-center
  text-align center
.text-left
  text-align left
.text-right
  text-align right

ul.inline-list
  list-style: none
  margin: 0
  padding: 0
  li
    display: inline-block
    text-align: center
  a
    text-decoration: none
    padding: 1rem
    
.overflow-container
  overflow-x scroll

.aspect-ratio
  height 0
  padding-top 56.25%
  position relative

.aspect-ratio--object
  height 100%
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  z-index 100

.boxed
  background whitesmoke
  box-sizing border-box

.bordered
  border 1px solid rgba(0,0,0,0.2)

.bg-cover
  background-image url(http://lorempixel.com/800/600/cats/9/)
  background-repeat no-repeat
  background-size cover
  background-position center center

.shadow-hover
  position relative
  &:after
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index -1
    box-shadow 0 0 6px rgba(0, 0, 0, 0.5)
    opacity 0
    transition all .5s ease
  &:hover
    &:after
      opacity 1

.darked
  position relative
  &:before
    content ""
    display block
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0,0,0, 0.6)
    transition all .3s linear
  &:hover
    &:before
      opacity .5

.darked-text
  position relative
  z-index 10

.color-white
  color #ffffff!important

.text-shadow
  text-shadow 1px 1px 2px rgba(0,0,0,0.4)

.img-right
  float right
  width 42%
  margin 0 0 2px 6px

.img-left
  float left
  width 42%
  margin 0 6px 2px 0

@media only screen and (min-width: 480px)
  .img-right
    width auto
    margin 0 0 0 .7rem
  .img-left
    width auto
    margin 0 .7rem 0 0


