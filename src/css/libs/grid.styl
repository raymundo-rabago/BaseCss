// BASIC GRID - Raymundo Rabago
.inner
  margin: 0 auto
  width: 90%
  box-sizing border-box
.row
  clearfix()
  width: 100%
  box-sizing border-box
.half-block,.third-block,.fourth-block,.sidebar,.content-left,.content-right
  width: 100%
  margin: 0 0 1rem 0
  
@media only screen and (min-width: 768px)
  .half-block
    float: left
    width: 49%
    margin-right: 2%
    &:last-child
      margin-right: 0
  .third-block
    float: left
    width: 32%
    margin-right: 2%
    &:last-child
      margin-right: 0
  .fourth-block
    float: left
    width: 23.5%
    margin-right: 2%
    &:last-child
      margin-right: 0
  .sidebar
    float: left
    width: 32%
  .content-left
    float: left
    width: 66%
    margin-right: 2%
  .content-right
    float: left
    width: 66%
    margin-left: 2%
    
@media only screen and (min-width: 992px)
  .inner
    width: 960px
    
@media only screen and (min-width: 1382px)
  .inner
    width: 1280px